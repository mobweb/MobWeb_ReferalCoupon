<?xml version="1.0"?>
<config>
	<sections>
		<referalcoupon module="referalcoupon">
			<tab>sales</tab>
			<label>Referal Coupon</label>
			<sort_order>9003</sort_order>
			<show_in_default>1</show_in_default>
			<show_in_website>1</show_in_website>
			<show_in_store>1</show_in_store>
			<groups>
				<configuration module="referalcoupon">
					<label>Configuration</label>
					<sort_order>10</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
					<fields>
						<!-- Access this field via: Mage::getStoreConfig('referalcoupon/configuration/shopping_cart_price_rule_id') -->
						<shopping_cart_price_rule_id>
							<label>Shopping Cart Price Rule</label>
							<validate>required-entry</validate>
							<frontend_type>select</frontend_type>
							<source_model>referalcoupon_adminhtml/system_config_source_salesrules</source_model>
							<sort_order>10</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</shopping_cart_price_rule_id>
						<transactional_email_id>
							<label>Transactional Email</label>
							<validate>required-entry</validate>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_email_template</source_model>
							<sort_order>20</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</transactional_email_id>
					</fields>
				</configuration>
			</groups>
		</referalcoupon>
	</sections>
</config>
